{
  "name": "employee-slackbot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Employee Slackbot + MCP gateway monorepo",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev:slackbot": "npm --prefix services/slackbot run dev",
    "dev:mcp-gateway": "npm --prefix services/mcp-gateway run dev",
    "start:slackbot": "npm --prefix services/slackbot run start",
    "start:mcp-gateway": "npm --prefix services/mcp-gateway run start",
    "check": "npm --prefix services/slackbot run check && npm --prefix services/mcp-gateway run check",
    "test": "node --test \"tests/**/*.test.js\"",
    "test:watch": "node --test --watch \"tests/**/*.test.js\""
  }
}
