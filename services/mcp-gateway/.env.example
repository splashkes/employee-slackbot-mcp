NODE_ENV=development
PORT=8081
LOG_LEVEL=info

MCP_GATEWAY_AUTH_TOKEN=replace-with-strong-random-token
MCP_REQUEST_SIGNING_SECRET=replace-with-another-strong-random-token
MCP_REQUEST_SIGNATURE_MAX_AGE_SEC=300
ALLOWED_TOOLS_FILE=../../config/allowed-tools.json
ENABLE_MUTATING_TOOLS=false
REQUEST_MAX_BODY_BYTES=131072

# Database — Supabase Postgres (read-only connection recommended)
SUPABASE_DB_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Edge Functions — for mutating operations via Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=replace-me

# Codebase repo browser — for code review tools
CODEBASE_REPO_URL=
REPO_CLONE_DIR=/tmp/ab-repo-clone
REPO_BRANCH=main
